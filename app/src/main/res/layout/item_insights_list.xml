<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:paddingTop="@dimen/double_factor"
    android:paddingBottom="@dimen/double_factor"
    android:layout_marginLeft="@dimen/double_factor"
    android:layout_marginRight="@dimen/double_factor">

    <TextView
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:id="@+id/text_insights_name"
        tools:text="Root"
        android:textSize="22sp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_weight="7"
        android:layout_height="wrap_content"
        android:id="@+id/text_insights_description"
        tools:text="Meaning"
        android:layout_marginLeft="@dimen/base_factor"
        android:textColor="@color/colorSecondaryText"
        android:textSize="22sp"
        android:layout_marginStart="@dimen/base_factor" />


</LinearLayout>
